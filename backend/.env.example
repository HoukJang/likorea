# 서버 설정
PORT=5001
NODE_ENV=production

# MongoDB 연결 정보
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT 시크릿 키 (보안을 위해 강력한 랜덤 문자열 사용)
JWT_SECRET=your-super-secret-jwt-key-here

# 도메인 연결을 위한 CORS 설정
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000

# 테스트 환경 설정 (선택사항)
# TEST_MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/test_database?retryWrites=true&w=majority

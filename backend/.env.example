# MongoDB Connection String
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# JWT Secret Key (Generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here

# JWT Refresh Token Secret
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here

# Anthropic API Key (for Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Server Configuration
NODE_ENV=development
PORT=5001

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Session Configuration
SESSION_SECRET=your_session_secret_key_here

# Rate Limiting (requests per minute)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Debug Level (development only)
DEBUG=true

# Image Scraping Configuration
# Set to 'true' to enable real image scraping (may be slow and unreliable)
# Set to 'false' to use hardcoded reference images (fast and reliable)
ENABLE_IMAGE_SCRAPING=false

# Extract full articles for news bot (performance consideration)
EXTRACT_FULL_ARTICLES=false